<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="cols-8 offset-3">
    <h3 style="font-weight: 600"><%= patient.id %></h3>
  </div>
  <div class="cards col-6 offset-3 show-card patient-card">
    <h3><%= patient.date %></h3>
    <div class="card-body">
      <p class="card-text"><%= patient.bodyTemperature %></p>
      <p class="card-text"><%= patient.bloodPressure %></p>
      <p class="card-text"><%= patient.heartRate %></p>
      <p class="card-text"><%= patient.bodyTemperature %></p>
      <p class="card-text">
        <%= patient.createdAt ? patient.createdAt.toLocaleString() :
        'Nothinghere' %>
        <br />
        <%= patient.updatedAt ? patient.updatedAt.toLocaleString() :
        'Nothingupdated' %>
      </p>
    </div>
  </div>

  <div class="btns">
    <a
      href="/Patients/<%= patient._id  %>/edit"
      class="btn btn-dark col-1 offset-3"
      >Edit</a
    >
    <form method="POST" action="/Patients/<%= patient._id %>?_method=DELETE">
      <button class="btn btn-dark offset-5 del-btns">Delete</button>
    </form>
  </div>
</div>
